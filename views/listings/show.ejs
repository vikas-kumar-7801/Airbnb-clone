<% layout("/layouts/boilerplate")%>

<body>

  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h3>Listing Details :</h3>
    </div>  
    <div class="card col-6 offset-2">
      <img src="<%= listing.image %>" class="card-img-top show-img" alt="Listing_image">
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %></b>
          <br>
          <%= listing.description %>
          <br>
          &#8377; <%= listing.price.toLocaleString("en-IN") %>
          <br>
          <%= listing.location %>
          <br>
          <%= listing.country %>
          <br>
        </p>
        
        <a href="/listings/<%= listing._id %>/edit" ><button class="btn btn-dark mt-3 edit-listing-btn">Edit</button></a>

        <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
        
        <button class=" btn btn-dark mt-3 delete-btn">Delete</button>
        
        </form>
      </div>
    </div>
  </div>   
</body>
</html>
